<templateSet group="AndroidLog">
  <template name="logd" value="android.util.Log.d($CLASS_NAME$.class.getName(), String.format(Locale.ENGLISH, &quot;&quot;));" description="Log.d(Class.class.getName(), String.format(Locale.ENGLISH, String))" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="loge" value="android.util.Log.e($CLASS_NAME$.class.getName(), String.format(Locale.ENGLISH, &quot;&quot;), $exception$);" description="Log.e(Class.class.getName(), String.format(Locale.ENGLISH, String), Exception)" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <variable name="exception" expression="" defaultValue="e" alwaysStopAt="false" />
    <context />
  </template>
  <template name="logi" value="android.util.Log.i($CLASS_NAME$.class.getName(), String.format(Locale.ENGLISH, &quot;&quot;));" description="Log.i(Class.class.getName(), String.format(Locale.ENGLISH, String))" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="logw" value="android.util.Log.w($CLASS_NAME$.class.getName(), String.format(Locale.ENGLISH, &quot;&quot;), $exception$);" description="Log.w(Class.class.getName(), String.format(Locale.ENGLISH, String), Exception)" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <variable name="exception" expression="" defaultValue="e" alwaysStopAt="false" />
    <context />
  </template>
  <template name="wtf" value="android.util.Log.wtf($CLASS_NAME$.class.getName(), String.format(Locale.ENGLISH, &quot;&quot;), $exception$);" description="Log.wtf(Class.class.getName(), String.format(Locale.ENGLISH, String), Exception)" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <variable name="exception" expression="" defaultValue="e" alwaysStopAt="false" />
    <context />
  </template>
  <template name="logm" value="android.util.Log.d($CLASS_NAME$.class.getName(), $content$);" description="Log method name and its arguments" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <variable name="content" expression="groovyScript(&quot;def params = _2.collect {it + ' = [\&quot; + ' + it + ' + \&quot;]'}.join(', '); return '\&quot;' + _1 + '() called' + (params.empty  ? '' : ' with: ' + params) + '\&quot;'&quot;, methodName(), methodParameters())" defaultValue="" alwaysStopAt="false" />
    <context />
  </template>
  <template name="logr" value="android.util.Log.d($CLASS_NAME$.class.getName(), &quot;$METHOD_NAME$() returned: &quot; +  $result$);" description="Log result of this method" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <variable name="METHOD_NAME" expression="methodName()" defaultValue="" alwaysStopAt="false" />
    <variable name="result" expression="variableOfType(methodReturnType())" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
</templateSet>